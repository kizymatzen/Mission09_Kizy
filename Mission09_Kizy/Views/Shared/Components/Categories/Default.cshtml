@{
}

@model IEnumerable<string>

@*Dropdown selector - Extra Bootstrap*@
<div class="dropdown">
    <button class="btn btn-primary btn-light dropdown-toggle" type="button" id="categoryDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Home
    </button>
    <div class="dropdown-menu" aria-labelledby="categoryDropdown">
        <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="" asp-route-pageNum ="1" class="dropdown-item">All Categories</a>
        @foreach (string category in Model)
        {
            <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="@category" asp-route-pageNum ="1"
               class="dropdown-item">@category</a>
        }
    </div>
</div>











